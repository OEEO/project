.raise-order-detail {
    background: #fff;
    padding: 0 40rpx;
    box-sizing: border-box;
    margin-bottom: 20rpx;
}

.raise-order-detail .co1 {
    display: flex;
    justify-content: space-between;
    padding: 35rpx 0;
    border-bottom: 1rpx solid #eee;
}

.raise-order-detail .raise-order-detail_img {
    width: 256rpx;
    height: 157rpx;
    margin-right: 24rpx;    
    /* display: inline-block; */
}

.raise-order-detail .raise-order-detail_info {
    display: inline-flex;
    flex-direction: column;
    justify-content: space-between;
    height: 157rpx;
    vertical-align: top;
    flex: 1;
    /* float: right; */
}

.raise-order-detail .raise-order-detail_title {
    max-width: 300rpx;
    display: inline-block;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.raise-order-detail .raise-order-detail_footer {
    padding: 15rpx 0;
}

.raise-order-info {
    background: #fff;
    padding: 30rpx 40rpx;
    margin-bottom: 20rpx;
}

.raise-order-info .raise-order-info_item {
    padding-bottom: 30rpx;
    border-bottom: 1rpx solid #eee;
    margin-bottom: 30rpx;
}

.raise-order-info .raise-order-info_address {
    max-width: 480rpx;
}

.step-item {
    box-sizing: border-box;
    border-left: 6rpx solid transparent;
    padding-left: 8rpx;
    height: 70rpx;
    line-height: 70rpx;
    font-size: 28rpx;
    color: #a0a0a0;
    background: #fcfcfc;
    margin-bottom: 20rpx;
}

.step-item-block {
    box-sizing: border-box;
    padding-left: 26rpx;
    padding-right: 40rpx;
    border-left: 2rpx solid transparent;
}

.step-item.active {
    background: #fbf9f4;
    color: #b39851;   
    border-left: 6rpx solid #b39851; 
}

.step-item.active .step-item-block {
    border-left: 2rpx solid #b39851;
}

.raise-order-pay_price {
    box-sizing: border-box;
    padding: 0 40rpx;
    margin-bottom: 108rpx;
}

.submit-btn {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 88rpx;
    line-height: 88rpx;
    color: #fff;
    background: #b39851;
    text-align: center;
    border: none;
    outline: none;
    border-radius: 0;
    font-size: 36rpx;
}

.raise-lottery {
    padding: 30rpx 40rpx;
    background: #fff;
    box-sizing: border-box;
    margin-bottom: 20rpx;
}

.raise-lottery .lucky-num {
    margin-left: 50rpx;
}

.raise-lottery .lucky-status {
    margin-left: 10px;
}


