@import '../common/common.wxss';
page {
    overflow-y: hidden;
}
scroll-view {
    height: 100%;
}
.raise-order {
    padding-bottom: 108rpx;
}

.raise-order-progress {
    background: #fff;
    padding: 82rpx 0 52rpx;
    margin-bottom: 20rpx;
}

.raise-progress {
    /* padding: 0 40rpx; */
    width: 670rpx;
	height: 6rpx;
    background-color: rgba(179, 152, 81, 0.3);
    border-radius: 3rpx;
    margin: auto;
}

.raise-progress .raise-progress_line {
    height: 100%;
    border-radius: 3rpx;
    opacity: 1;
    background: #b39851;
    position: relative;
    overflow: none !important;
}

.raise-progress .raise-progress_point {
    opacity: 1;
    display: inline-block;
    position: absolute;
    width: 16rpx;
    height: 16rpx;
    border-radius: 50%;
    background: #b39851;
    right: 0;
    top: 0;
    bottom: 0;
    margin: auto;
    transform: translate3d(50%, 0, 0);
    overflow: visible !important;
}

.raise-progress .raise-progress_text {
    position: absolute;
    right: 0;
    top: -46rpx;
    font-size: 24rpx;
    color: #b39851;
    transform: translate3d(50%, 0, 0);
    overflow: visible;
}

.raise-statistics {
    display: flex;
    margin: 20rpx auto 0;
}

.raise-statistics .raise-statistics_item {
    flex: 1;
    text-align: center;
    overflow: hidden;
}

.raise-statistics .raise-statistics_item > text {
    display: block;
    line-height: 1;
}

.raise-statistics .raise-statistics_item > text.sm-text {
    font-size: 20rpx;
    color: #999;
}

.raise-statistics .raise-statistics_item > text.bg-text {
    font-size: 32rpx;
    color: #333;
    margin-top: 32rpx;
}

