
@import "/wxParse/wxParse.wxss";

.raise-detail {
    padding-bottom: 10rpx;
}

.raise_video,
.raise_image {
    width: 750rpx;
    height: 422rpx;
}

.raise_mem_img {
    width: 72rpx;
    height: 72rpx;
    margin-right: 24rpx;
    border-radius:50%;
}

.raise-base-info {
    padding: 47rpx 40rpx 40rpx;
    background: #fff;
    margin-bottom: 20rpx;
}

.raise-info {
    background: #fff;
    display: flex;
    align-items: center;
    margin: auto;
    padding: 24rpx 40rpx;
    border-bottom: 1rpx solid #f5f5f5;
}

.raise-info_sub {
    display: inline-block;
}

.raise-info_sub .raise-info_sub_nickname {
    display: block;
    font-size: 24rpx;
    color: #333;
    font-family: PingFangSC-Medium;
}

.raise-info_sub .raise-info_sub_text {
    font-size: 24rpx;
    color: #999;
}

.raise-info_sub .raise-info_sub_text .slat-point {
    display: inline-block;
    margin: 0 20rpx;
}

.raise-title {
    font-size: 32rpx;
    color: #000;
    font-weight: bold;
    display: block;
    margin: 0 auto 35rpx;
}

.raise-introduction {
    display: block;
    font-size: 24rpx;
    color: #333;
    margin: 0 auto;
}

.raise-progress-box {
    height: 60rpx;
    width:100%;
    margin:10rpx 0 55rpx;
}

.raise-progress {
    /* padding: 0 40rpx; */
    width: 670rpx;
	  height: 6rpx;
    background-color: rgba(179, 152, 81, 0.3);
    border-radius: 3rpx;
    margin: 75rpx auto 0;
}

.raise-progress .raise-progress_line {
    height: 100%;
    border-radius: 3rpx;
    opacity: 1;
    background: #b39851;
    position: relative;
    white-space: nowrap;
    /* overflow: none !important; */
}

.raise-progress .raise-progress_point {
    opacity: 1;
    display: inline-block;
    position: absolute;
    width: 16rpx;
    height: 16rpx;
    border-radius: 50%;
    background: #b39851;
    right: 0;
    top: 0;
    bottom: 0;
    margin: auto;
    transform: translate3d(50%, 0, 0);
    overflow: visible !important;
}

.raise-progress .raise-progress_text {
    position: absolute;
    right: 0;
    top: -46rpx;
    font-size: 24rpx;
    color: #b39851;
    transform: translate3d(50%, 0, 0);
    overflow: visible;
}

.raise-target-box {
    margin:33rpx 10rpx 22rpx 0;
    font-size:20rpx;
    text-align:right;
    padding:5rpx 0rpx 5rpx 10rpx;
    color: #b39851;

}

.raise-statistics-box {
    height:80rpx;
}

.raise-statistics {
    display: flex;
    margin: 5rpx auto 0;
}

.raise-statistics .raise-statistics_item {
    flex: 1;
    text-align: center;
    overflow: hidden;
}

.raise-statistics .raise-statistics_item > text {
    display: block;
    line-height: 1;
}

.raise-statistics .raise-statistics_item > text.sm-text {
    font-size: 20rpx;
    color: #999;
}

.raise-statistics .raise-statistics_item > text.bg-text {
    font-size: 32rpx;
    color: #333;
    margin-top: 20rpx;
}

.raise-detail-block {
    position: relative;
    background: #fff;
    min-height: 100vh;
}

/** raise-selector **/
.raise-selector_nav {
    position: sticky;
    top: 0;
    height: 96rpx;
    width: 100%;
    background: #fff;
    box-shadow: 0px 1px 2px 0px #ebeae7;
    z-index: 10;
}

.raise-selector_nav .raise-selector {
    position: relative;
    display: flex;
    /*
    justify-content: space-between;
    */
    justify-content: space-around;
    box-sizing: border-box;
    width: 100%;
    height: 100%;
    overflow: hidden;
    text-align: center;
}

.raise-selector_nav .raise-selector .raise-selector-item {
    display: inline-block;
    padding: 48rpx 0 24rpx;
    text-align: center;
    box-sizing: border-box;
    /* margin: 0 25rpx; */
    color: #333;
    font-size: 24rpx;
    overflow: hidden;
    border-bottom: 2rpx solid transparent;
}

.raise-selector_nav .raise-selector .raise-selector-item.active {
    color: #b39851;
    border-bottom: 2rpx solid #b39851;
    box-sizing: border-box;
}

/** 众筹详情 **/
.raise-content {
    padding: 0 40rpx;
    box-sizing: border-box;
    background: #fff;
    font-size: 24rpx;
    line-height: 48rpx;
    color: #333;
    margin-bottom: 90rpx;
    margin-top: 5rpx;
    min-height: 80vh;
}

.raise-content .wxParse-img {
    max-width: 100% !important;
    display: block !important;
    /* margin: 48rpx auto 0rpx; */
}

.raise-content .wxParse-p {
    font-size: 24rpx;
    line-height: 48rpx;
    color: #333;
}

.raise-content .text-center {
    text-align: center;
}

.raise-content .tips {
    text-align: center;
    font-size: 30rpx;
    margin: 48rpx 0;
}

.raise-content .wx-icon {
    width: 108rpx;
    height: 88rpx;
    display: block;
    margin: auto;
}

.raise-content .concact-content {
  /* position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);  */
  margin-top: 250rpx;
  min-width: 600rpx;
}
.raise-content .riskTips-content{
  padding-bottom: 10rpx;
}


.raise-content .copy-btn {
    height: 48rpx;
    width: 240rpx;
    font-size: 24rpx;
    line-height: 48rpx;
    text-align: center;
    border-radius: 24rpx;
    color: #b39851;
    border: 1px solid #b39851;
    margin: 48rpx auto 0;
}

.raise-content .raise-tag {
    color: #fff;
    height: 48rpx;
    font-size: 24rpx;
    line-height: 48rpx;
    background-color: #b39851;
    padding: 0 12rpx;
    display: inline-block;
    margin-bottom: 48rpx;
    margin-top: 60rpx;
}
/* .raise-content .riskTips-content .wxParse-p, */
.raise-content .concact-content .wxParse-p {
    margin-bottom: 48rpx;
}
.raise-content .riskTips-content .line-p text,
.raise-content .concact-content .line-p text {
    display: block;
    margin-bottom: 20rpx;
}

.raise-content .raise-content-title {
    color: #b39851;
    margin-bottom: 48rpx;
}

.raise-standby-btn {
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 92rpx;
    line-height: 92rpx;
    text-align: center;
    font-size: 36rpx;
    border: none;
    border-radius: 0;
    z-index: 99;
}

.raise-standby-btn.actived {
    color: #fff;
    background: #e64340;
}

.raise-standby-btn.disabled {
    color: rgba(51, 51, 51, 0.6);
    background: #d6d6d6;
}

/* 倒计时 */
.raise-count-down {
    position: fixed;
    bottom: 92rpx;
    left: 0;
    width: 100%;
    height: 72rpx;
    line-height: 72rpx;
    background: rgba(92, 92, 92, 0.8);
    padding: 0 40rpx;
    box-sizing: border-box;
    color: #fff;
}

.raise-count-down .bg {
    font-size: 36rpx;
}

.raise-count-down .sm {
    font-size: 20rpx;
    margin: 0 12rpx;
}

.raise-count-down .star-btn {
    display: inline-block;
    height: 48rpx;
    padding: 0 40rpx;
    text-align: center;
    line-height: 48rpx;
    border: 2rpx solid #fff;
    background: transparent;
    border-radius: 24rpx;
    position: absolute;
    top: 0;
    bottom: 0;
    right: 40rpx;
    margin: auto;
    font-size: 24rpx;
    color: #fff;
}