
.tips {
    text-align: center;
    font-size: 30rpx;
    margin: 48rpx 0;
    color: #969696;
}

.wx-icon {
    width: 300rpx;
    height: 300rpx;
    display: block;
    margin: 250rpx auto 0;
}


.container{
    min-height: 100vh;
    background-color: #f5f5f5;
    width: 100%;
    display: flex;
    justify-content: center;
}
.raise-priority{
    padding-top: 60rpx;
    padding-bottom: 40rpx;
}
.raise-item{
    position: relative;
    width: 658rpx;
    height: 382rpx;
    box-sizing: border-box;
    padding: 0 80rpx;
    background-image: url('http://test.yummy194.cn/images/raise_card@2x.png');
    background-position: 0 0;
    background-size: 658rpx 382rpx;
    background-repeat: no-repeat;
    margin-top: 40rpx;
    text-align: center;
    overflow: hidden;
}
.raise-item:first-child{
    margin-top:0;
}


.raise-item-title{
    padding-top: 80rpx;
    font-size: 32rpx;
    color: #ccc;
}
.raise-item-status{
    position: absolute;
    top: 197rpx;
    width: 100%;
    left: 50%;
    transform: translateX(-50%);
    font-size: 24rpx;
    color: #9c855c;
}
.raise-item-btn{
    position: absolute;
    top: 248rpx;
    left: 50%;
    transform: translateX(-50%);
    font-size: 30rpx;
    color: #fff;
    width: 160rpx;
    height: 60rpx;
    line-height: 60rpx;
    background-color: #9c855c;
    border-radius: 4rpx;
}
/* 已过期 */
.priority-used {
    background-image: url('http://test.yummy194.cn/images/raise_card1@2x.png')
}
.btn-disable{
    background-color: #828280;
}

.img-priority-overdue,
.img-priority-used{
    position: absolute;
    bottom: 28rpx;
    left: 33rpx;
    width: 140rpx;
    height: 140rpx;
    overflow: hidden;
}