.container{
}
.form-item{
    padding: 40rpx; 
    font-size: 28rpx;
    line-height: 32rpx;
    display: flex;
    background-color: #fff;
    align-items: flex-end;
}
.form-item .left{
  width: 170rpx;
  text-align: right;
  margin-bottom: 10rpx;
}
.form-item .right{
  flex: auto;
  border-bottom: 1px solid #eee;
}
.confirm-btn{
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 92rpx;
    line-height: 92rpx;
    text-align: center;
    font-size: 36rpx;
    border: none;
    border-radius: 0;
    color: #fff;
    background: #e64340;
}

.confirm-btn::after{
  border: noen;
}